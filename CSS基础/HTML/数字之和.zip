<script>
        var number=1539;
        var number2=parseInt(number%10);
        var number3=parseInt((number/10)%10);
        var number4=parseInt((number/100)%10);
        var number5=parseInt((number/1000)%10);
        document.write("数字"+number+"的个位数字："+number2+"<br>"+"十位数字："+number3
                +"<br>"+"百位数字；"+number4+"<br>"+"千为数字："+number5+"<br>"+
                  "总和为："+(number2+number3+number4+number5));
</script>